---
import BaseLayout from './BaseLayout.astro'
const { frontmatter, description, title } = Astro.props
---

<BaseLayout description={description} title={title}>
  <article class="prose prose-stone flex flex-col max-w-full">
    <header>
      <h2>{frontmatter.title}</h2>
      <p>{frontmatter.pubDate.toString().slice(0, 10)}</p>
    </header>
    <main>
      <slot />
    </main>
    <div class="flex flex-wrap flex-col">
      <div>Tags:</div>
      <div class="flex gap-2">
        {
          frontmatter.tags.map((tag: string) => (
            <p class="border border-gray-400 hover:bg-slate-300 rounded-md p-1 text-base">
              <a href={`/tags/${tag}`}>{tag}</a>
            </p>
          ))
        }
      </div>
    </div>
  </article>
</BaseLayout>
