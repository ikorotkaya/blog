---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter, description, title } = Astro.props;
---

<BaseLayout description={description} title={title}>
  <article class="flex flex-col gap-16">
    <header>
      <h2>Title: {frontmatter.title}</h2>
      <p>Date: {frontmatter.pubDate.toString().slice(0,10)}</p>
      <p>Description: {frontmatter.description}</p>
    </header>
    <main>
      <slot />
    </main>
    <div class="flex flex-wrap flex-col">
      <div>Tags:</div>
      <div class="flex gap-2">
        {frontmatter.tags.map((tag) => (
          <p class="border border-gray-400 hover:bg-slate-300 rounded-md p-1 text-base">
            <a href={`/tags/${tag}`}>
              {tag}
            </a>
          </p>
        ))}
      </div>
    </div>
  </article>
</BaseLayout>